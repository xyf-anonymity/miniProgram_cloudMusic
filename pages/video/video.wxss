/* pages/video/video.wxss */
/* 顶部搜索 */
.searchContainer {
    display: flex;
    padding: 10rpx 10rpx;
}
.searchContainer image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.searchContainer .search {
    padding-left: 20rpx;
    border: 1px solid #d43c33;
    border-radius: 30rpx;
    flex: 1;
    margin: 0 10rpx;
    text-align: center;
}
.searchContainer .search input {
    width: 100%;
    height: 100%;
}
.searchContainer .placeholder {
    color: #d43c33;
}

/* 视频标签列表 */
.videoGroupList {
    display: inline-flex;
    height: 80rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.videoGroupList .scrollContainer {
    display: flex;
    /* flex布局，涉及到文字，需要white-space: nowrap */
    white-space: nowrap; 
    padding-right: 30rpx;
    
}
.videoGroupList .scrollContainer .labelContainer {
    box-sizing: border-box;
    margin:0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.active {
    border-bottom: 1px solid #d43c33;
}

/* 视频标签/分类下的视频列表 */
.videoGroupScroll {
    margin-top: 20rpx;
    /* 1vh = 1%视口高度 */
    height: calc(100vh - 180rpx);
}
.videoGroupScroll .videoGroupContainer {
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    width: 100%;
}
.videoGroupScroll .videoGroupContainer .videoContainer {
    box-sizing: border-box;
    width: 100%;
    padding-left:3%;
    padding-right:3%;
}
.videoGroupScroll .videoGroupContainer .videoContainer .common{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}


.videoGroupScroll .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-left:3%;
    padding-right:3%;
  }
  
/* footer */
.footer {
border-top: 1rpx solid #eee;
padding: 20rpx 0;
padding-left:3%;
padding-right:3%;
}

.footer .avatar {
width: 60rpx;
height: 60rpx;
border-radius: 50%;
vertical-align: middle;
}

.footer  .nickName {
font-size: 26rpx;
vertical-align: middle;
margin-left: 20rpx;
}

.footer .comments_praised {
float: right;
}

.comments_praised .btn {
display: inline;
padding: 0;
background-color: transparent;
border-color: transparent;
}

.comments_praised .btn:after {
border: none;
}

.comments_praised .item {
margin-left: 50rpx;
position: relative;
}

.comments_praised .item .count {
position: absolute;
top: -20rpx;
font-size: 20rpx;
}