/* pages/music/music.wxss */
/* 背景图 */
.bgImg {
    position: fixed;
    z-index: -10;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(6rpx);
    backdrop-filter:satuate(150%);
}
.mask {
    position: fixed;
    z-index: -9;
    background-color: rgba(7,17,27,.5);
    filter: blur(6rpx);
}

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20rpx;
}

.header .author {
    color: #fff;
}

/* 唱片指针 */
.needleContainer {
    position: relative;
    margin-top: 50rpx;
    margin-left: 100rpx;
    width: 192rpx;
    height: 274rpx;
}

/* needle上的圆圈 */
.circ {
    position: absolute;
    top: -36rpx;
    left: 6rpx;
    width: 70rpx;
    height: 70rpx;
    z-index: 999;
    border-radius: 50%;
    background-color: #ededec;
    box-shadow: 0rpx 10rpx 6rpx rgba(0,0,0,.4);
}

.needleContainer .needle {
    position: absolute;
    z-index: 998;
    width: 100%;
    height: 100%;
    transform-origin: 40rpx 0;
    transform: rotate(-25deg);
    transition: transform 1s linear;
}
/* 唱片 */
.discContainer {
    position: relative;
    width: 598rpx;
    height: 598rpx;
    border-radius: 50%;
    margin-top: -130rpx;
}

.discContainer .disc {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.discContainer .coverImg {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
}
/* needle 动画 */
.musicPlay {
    transform: rotate(0deg)!important;
}
/* 唱片旋转动画 */
.discRotate {
    animation: discRotate 4s linear infinite!important;
    animation-delay: 1s!important;
}

@keyframes discRotate {
    from {}
    to {
        transform: rotate(360deg)
    }
}

.musicControl {
    position: absolute;
    bottom: 40rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid #fff;
}
  
.musicControl text {
    width: 20%;
    text-align: center;
    font-size: 50rpx;
    color: #fff;
    height: 120rpx;
    line-height: 120rpx;
}
.musicControl text.big {
    font-size: 80rpx;
}
  