/* pages/recommend/recommend.wxss */
/* 头部图片 */
.imgContainer {
    position: relative;
    width: 100%;
    height: 300rpx;
}
.imgContainer .recommendImg {
    width: 100%;
    height: 100%;
    background-color: #90c9fc;
}
.imgContainer .day {
    position: absolute;
    display: block;
    top: 20rpx;
    left: 60rpx;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
}

/* 每日歌曲推荐列表 */
.recommendList {
    position: relative;
    top: -20rpx;
    background: #fff;
    border-radius: 40rpx;
    width: 100%;
    height:calc(100vh - 300rpx);
    padding: 20rpx;
    box-sizing: border-box;
}
  
.recommendList .listHeader {
    height: 60rpx;
    line-height: 60rpx;
}

.recommendList .listHeader .changeMore {
    float: right;
    font-size: 24rpx;
    color: #333;
}

.recommendList .scrollView {
    height: calc(100vh - 380rpx);
  }
  
.recommendList .scrollView::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.recommendList .scrollItem {
    display: flex;
    position: relative;
    margin-top: 40rpx;
}

.recommendList .scrollItem .musicImg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 6rpx;
}

.recommendList .scrollItem .musicContent {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.recommendList .scrollItem .musicContent .songName {
    font-size: 28rpx;
}

.recommendList .scrollItem .musicContent .songAuthor {
    font-size: 22rpx;
    color: #333;
    margin-top: 12rpx;
}

.recommendList .scrollItem .radio {
    position: absolute;
    right: 0;
}